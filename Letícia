print ("Média das notas informadas")
nota01 = float(input("digite a primeira nota "))
nota02 = float(input("digite a segunda nota "))
nota03 = float(input("digite a terceira nota "))
nota04 = float(input("digite a quarta nota "))
resultado = nota01 + nota02 + nota03 + nota04
print ("A soma das suas notas é", resultado)
média = resultado / 4
print ("Sua média é", média)

num01 = float(input("Digite o primeiro número: "))
num02 = float(input("Digite o segundo número: "))
